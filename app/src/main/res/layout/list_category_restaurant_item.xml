<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativelayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/category_restaurant_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/findimg"
        android:layout_margin="10dp"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/category_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/category_restaurant_thumbnail"
        android:text="레스토랑이름"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/review_star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/category_restaurant_name"
        android:layout_alignLeft="@+id/category_restaurant_name"
        android:layout_marginTop="5dp"
        android:src="@drawable/reviewstar" />

    <TextView
        android:id="@+id/category_restaurant_review_score"
        android:gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="5.0"
        android:layout_alignTop="@+id/review_star"
        android:layout_toRightOf="@+id/review_star"/>

    <TextView
        android:id="@+id/category_restaurant_review_count"
        android:gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="리뷰 34"
        android:layout_alignTop="@+id/category_restaurant_review_score"
        android:layout_toRightOf="@+id/category_restaurant_review_score"/>

    <TextView
        android:id="@+id/category_restaurant_boss_review_count"
        android:gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="사장님댓글 20"
        android:layout_alignTop="@+id/category_restaurant_review_count"
        android:layout_toRightOf="@+id/category_restaurant_review_count"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/category_restaurant_delivery_fee"
        android:gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="배달요금 무료"
        android:layout_alignLeft="@+id/review_star"
        android:layout_below="@+id/review_star"/>

    <TextView
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/category_restaurant_delivery_fee"
        android:textColor="@color/black"
        android:id="@+id/category_restaurant_delivery_time"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="배달예상시간 50~60분"/>



</RelativeLayout>